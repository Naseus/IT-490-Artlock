<!doctype html>
<html lang="en">
<head>
  <title>Register Page</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="styles.css" />
</head>
<body>
  <%- include('./partials/header-empty.ejs') %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-3 sidebar">
        <ul class="list-group">
        </ul>
      </div>
      <div class="col-9 main-content">
        <br><br>
        <div class="card col-md-6 offset-md-3 col-sm-10 offset-sm-1">
          <div class="card-body">
              <h3 class="text-center text-secondary">Register</h3>
            <br>
            <!-- {% csrf_token %} -->
            <!---{{form}} -->
            <form method="POST" id="register" action="/register/">
              <div class="form-row">
                  <input id="username" type="text" class="form-control" name="username" placeholder="Enter Username" required>
              </div>
              <br>
              <div class="form-row">
                  <input id="password" type="password" class="form-control" name="password" placeholder="Enter Password" required>
              </div>
              <br>
              <div class="form-row">
                  <input id="confirmpassword" type="password" class="form-control" name="confirmpassword" placeholder="Confirm Your Password" required>
              </div>
              <br>
              <div class="form-row">
                  <button type="submit"  name="register_user"><span class="fas fa-sign-in-alt"></span>Register</button>
              </div>
              <p style="text-align: center;">Have an account? <a href="/login">login</a></p>
            </form>
            <% if(typeof message !== 'undefined') { %>
              <div>
                <p class="text-danger">
                  <%= message %>
                </p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <!--row-->
  </div> <!-- container-fluid-->
  <!-- Optional JavaScript; choose one of the two! -->
  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Option 2: Separate Popper and Bootstrap JS -->
  <!-- <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script> -->
</body>
</html>
